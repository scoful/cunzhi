{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "连一下",
  "version": "0.3.8",
  "identifier": "com.imhuso.cunzhi.lian-yi-xia",
  "build": {
    "beforeDevCommand": "pnpm dev:lian-yi-xia",
    "beforeBuildCommand": "pnpm build:lian-yi-xia",
    "frontendDist": "dist-lian-yi-xia",
    "devUrl": "http://localhost:5178/lian-yi-xia.html",
    "features": ["lian-yi-xia"]
  },
  "app": {
    "windows": [
      {
        "title": "连一下 - WebSocket管理器",
        "url": "lian-yi-xia.html",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "maxWidth": 1200,
        "maxHeight": 800,
        "center": true,
        "visible": true,
        "alwaysOnTop": false,
        "decorations": true,
        "hiddenTitle": false,
        "transparent": false,
        "skipTaskbar": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "lian-yi-xia-capability",
          "description": "连一下 WebSocket管理器权限",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-unlisten",
            "core:event:allow-emit",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-set-focus",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-32.png",
      "icons/icon-128.png",
      "icons/icon-256.png",
      "icons/icon-512.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}
